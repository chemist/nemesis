nemesis = do
  
  clean
    [ "**/*.hi"
    , "**/*.o"
    , "manifest"
    , "main"
    , "nemesis-tmp.*"
    ]
  
  desc "prepare cabal dist"
  task "dist" $ do
    sh "cabal clean"
    sh "cabal configure"
    sh "cabal sdist"

  desc "start console"
  task "i" (sh "ghci -isrc src/System/Nemesis.hs")

  desc "put all .hs files in manifest"
  task "manifest" $ do
    sh "find . | grep 'hs$' > manifest"
